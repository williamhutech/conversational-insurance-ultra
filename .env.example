# =============================================================================
# CONVERSATIONAL INSURANCE ULTRA - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Conversational Insurance Ultra"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
LOG_LEVEL="INFO"

# Backend API
BACKEND_HOST="0.0.0.0"
BACKEND_PORT=8000
BACKEND_RELOAD=True

# MCP Server
MCP_SERVER_NAME="insurance-ultra-mcp"
MCP_SERVER_VERSION="0.1.0"

# -----------------------------------------------------------------------------
# Database: Supabase (Postgres + pgvector)
# -----------------------------------------------------------------------------
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"
SUPABASE_DB_URL="postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres"

# -----------------------------------------------------------------------------
# Database: Neo4j (Graph Database for Policy Relationships)
# -----------------------------------------------------------------------------
NEO4J_URI="neo4j+s://your-instance.databases.neo4j.io"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your-neo4j-password"
NEO4J_DATABASE="neo4j"

# -----------------------------------------------------------------------------
# Database: PostgreSQL (Claims Intelligence - AWS RDS)
# -----------------------------------------------------------------------------
POSTGRES_CLAIMS_HOST="hackathon-db.ceqjfmi6jhdd.ap-southeast-1.rds.amazonaws.com"
POSTGRES_CLAIMS_PORT=5432
POSTGRES_CLAIMS_DATABASE="hackathon_db"
POSTGRES_CLAIMS_USER="hackathon_user"
POSTGRES_CLAIMS_PASSWORD="Hackathon2025!"

# -----------------------------------------------------------------------------
# Database: DynamoDB (Payment Records)
# -----------------------------------------------------------------------------
DYNAMODB_PAYMENTS_TABLE="lea-payments-local"
DYNAMODB_ENDPOINT="http://localhost:8000"  # Local DynamoDB; remove for AWS
AWS_REGION="ap-southeast-1"
AWS_ACCESS_KEY_ID="dummy"  # For local DynamoDB; use real credentials for AWS
AWS_SECRET_ACCESS_KEY="dummy"  # For local DynamoDB; use real credentials for AWS

# -----------------------------------------------------------------------------
# Memory: Mem0 (Customer Conversation Memory)
# -----------------------------------------------------------------------------
MEM0_API_KEY="your-mem0-api-key"
MEM0_ORG_ID="your-mem0-org-id"
MEM0_PROJECT_ID="your-mem0-project-id"

# -----------------------------------------------------------------------------
# AI Models
# -----------------------------------------------------------------------------
# Anthropic Claude (Primary AI)
ANTHROPIC_API_KEY="sk-ant-api03-..."

# OpenAI (Optional, for embeddings or fallback)
OPENAI_API_KEY="sk-..."

# Default models
DEFAULT_LLM_MODEL="claude-3-5-sonnet-20241022"
DEFAULT_EMBEDDING_MODEL="text-embedding-3-small"

# -----------------------------------------------------------------------------
# Payment Processing: Stripe
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_CURRENCY="SGD"  # Singapore Dollars

# Payment Page URLs
PAYMENT_SUCCESS_URL="http://localhost:8085/success"
PAYMENT_CANCEL_URL="http://localhost:8085/cancel"

# -----------------------------------------------------------------------------
# OCR & Document Processing
# -----------------------------------------------------------------------------
# Tesseract OCR
TESSERACT_CMD="/usr/bin/tesseract"  # Path to tesseract binary
TESSERACT_LANG="eng"  # Default language

# EasyOCR
EASYOCR_LANGS='["en"]'  # JSON array of language codes
EASYOCR_GPU=False  # Set to True if GPU available

# Document Storage
MAX_UPLOAD_SIZE_MB=10
ALLOWED_DOCUMENT_TYPES='["pdf", "png", "jpg", "jpeg"]'

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
SECRET_KEY="your-secret-key-here-use-strong-random-string"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS='["http://localhost:3000", "http://localhost:8000"]'
CORS_ALLOW_CREDENTIALS=True

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_BLOCK_1=True  # Policy Intelligence Engine
ENABLE_BLOCK_2=True  # Conversational FAQ
ENABLE_BLOCK_3=True  # Document Intelligence & Auto-Quotation
ENABLE_BLOCK_4=True  # Purchase Execution
ENABLE_BLOCK_5=True  # Data-Driven Recommendations

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# Sentry (Error Tracking)
SENTRY_DSN=""

# Redis (Optional, for caching)
REDIS_URL="redis://localhost:6379/0"

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------
# Seed Data
SEED_DATABASE=True
LOAD_SAMPLE_POLICIES=True

# Testing
TEST_MODE=False
MOCK_PAYMENTS=True  # Use Stripe test mode
